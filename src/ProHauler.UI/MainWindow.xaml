<Window x:Class="ProHauler.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProHauler.UI"
        xmlns:converters="clr-namespace:ProHauler.UI.Converters"
        xmlns:views="clr-namespace:ProHauler.UI.Views"
        mc:Ignorable="d"
        Title="ProHauler" Height="768" Width="1024"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:SpeedToMphConverter x:Key="SpeedToMphConverter" />
        <converters:ConnectionStatusToColorConverter x:Key="ConnectionStatusToColorConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings" />
                <Separator />
                <MenuItem Header="E_xit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Performance Tracker" Click="PerformanceTracker_Click" />
                <Separator />
                <MenuItem Header="_Diagnostics" Command="{Binding ToggleDiagnosticsCommand}" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="+" Command="{Binding ZoomInCommand}" 
                    ToolTip="Zoom In" Width="30" Height="30" FontSize="16" FontWeight="Bold" />
            <Button Content="-" Command="{Binding ZoomOutCommand}" 
                    ToolTip="Zoom Out" Width="30" Height="30" FontSize="16" FontWeight="Bold" />
            <Separator />
            <Button Content="?" Command="{Binding CenterOnPlayerCommand}" 
                    ToolTip="Center on Player" Width="30" Height="30" FontSize="16" />
            <Separator />
            <TextBlock Text="Zoom:" VerticalAlignment="Center" Margin="5,0" />
            <TextBlock Text="{Binding ZoomLevel, StringFormat={}{0:P0}}" 
                       VerticalAlignment="Center" MinWidth="40" />
        </ToolBar>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Height="25">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            
            <!-- Connection Status -->
            <StatusBarItem Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Margin="5,0"
                             Fill="{Binding ConnectionStatus, Converter={StaticResource ConnectionStatusToColorConverter}}" />
                    <TextBlock Text="{Binding ConnectionStatus}" Margin="5,0" />
                </StackPanel>
            </StatusBarItem>

            <!-- Spacer -->
            <StatusBarItem Grid.Column="1" />

            <!-- World Coordinates -->
            <StatusBarItem Grid.Column="2">
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="World: " />
                    <TextBlock Text="{Binding WorldCoordinates}" />
                </StackPanel>
            </StatusBarItem>

            <!-- Speed Info -->
            <StatusBarItem Grid.Column="3">
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="Speed: " />
                    <TextBlock Text="{Binding CurrentPlayerState.Speed, Converter={StaticResource SpeedToMphConverter}, FallbackValue=0}" />
                    <TextBlock Text=" MPH" />
                </StackPanel>
            </StatusBarItem>

            <!-- FPS Counter (Diagnostic Mode) -->
            <StatusBarItem Grid.Column="4" 
                           Visibility="{Binding IsDiagnosticMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="FPS: " />
                    <TextBlock Text="{Binding Fps, StringFormat={}{0:F0}}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area -->
        <Border DockPanel.Dock="Top" Background="#ECF0F1" ClipToBounds="True">
            <Grid>
                <TextBlock Text="ProHauler - Performance Tracking Dashboard" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Foreground="#34495E" />
            </Grid>
        </Border>
    </DockPanel>
</Window>
