    <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E" />
    <SolidColorBrush x:Key="CardBackground" Color="#2D2D30" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="#3E3E42" />
    <SolidColorBrush x:Key="PrimaryText" Color="#E0E0E0" />
    <SolidColorBrush x:Key="SecondaryText" Color="#B0B0B0" />
